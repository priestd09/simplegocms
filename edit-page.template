<form action="/_savepage" method="post">
<input type="hidden" name="Url" value="{{.Url | html}}" />

<p>
  Title: <input type="text" name="Title" size="70" value="{{.Title | html}}" />
</p>

<p>
  Created: {{.Created.Format "Mon, 02 Jan 2006 15:04:05 MST"}}<br />
  <input type="hidden" name="Created" value="{{.Created}}" />
</p>

<p>
  Modified: {{.Modified.Format "Mon, 02 Jan 2006 15:04:05 MST"}}
</p>

<p>
  Template: <select name="Template">{{$selected := .Template}}{{range .Templates}}
  <option value="{{. | html}}"{{ifEqual . $selected ` selected="selected"`}}>{{. | html}}</option>{{end}}
  </select>
</p>

<p>
  Tags: <input type="text" name="Tags" size="80" value="{{range $i, $elt := .Tags}}{{if $i}},{{end}}{{. | html}}{{end}}" />
</p>

<h2>Contents</h2>
<textarea name="Markdown" rows="40" cols="80">{{.Markdown | html}}</textarea>

<p>
  <input type="submit" name="Submit" value="Save" />
  <input type="submit" name="Submit" value="Delete this page" />
</p>
</form>
